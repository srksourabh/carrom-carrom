# Database (use Neon, Supabase, or Vercel Postgres for production)
DATABASE_URL=postgresql://user:password@host:5432/database

# Redis (use Upstash for production, or leave empty to disable caching)
REDIS_URL=redis://localhost:6379

# JWT Secrets (generate strong random strings for production)
ACCESS_TOKEN_SECRET=change-me-in-production
REFRESH_TOKEN_SECRET=change-me-in-production
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# Server
PORT=3000
NODE_ENV=production

# OTP (set to false in production, use real email/SMS service)
OTP_MOCK_ENABLED=true
OTP_MOCK_CODE=123456
